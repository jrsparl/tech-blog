<article>
    <a href="/dashboard" class="link-item"> &larr; Back to dashboard</a>
    <div class="card">
        <div>
            <h2 class="card-header">Edit Post</h2>
        </div>
        <div class="card-body">
            <form class="edit-post-form">
                <div class="form-group">
                    <label>
                        <h3>
                            Post Title
                        </h3>
                    </label>
                    <input name="post-title" type="text" value="{{post.title}}" class="form-control">
                </div>
                <div class="form-group">
                    <label>
                        <h3>
                            Post Content
                        </h3>
                    </label>
                    <input name="post-content" type="text" value="{{post.post_content}}" class="form-control">
                </div>
                <button type="submit" class="btn">Save post</button>
                <button type="button" class="btn">Delete post</button>
            </form>
        </div>
    </div>

    <div>
        by you on {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}" class="link-item">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body" class="form-input"></textarea>
    </div>

    <div>
        <button type="submit" class="btn">add comment</button>
    </div>
</form>
{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>